<head>
  <title>Chatter</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link href="rel=" stylesheet" stylesheets/style.css">
</head>

<body>

  <div class="container">
    <br>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <form id="cms">
          <div class="form-group">
            <label for="category">
              <h4>Create Your Post</h4>
            </label>
            <textarea placeholder="Title" class="form-control" rows="1" id="title" data-id="{{user.id}}"></textarea>
            <textarea placeholder="Post Text" class="form-control" rows="5" id="body"></textarea>
            <button type="submit" class="btn btn-success submit">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <br />
    <div class="row row-cols-1 row-cols-md-2">
      {{#each quotes}}
      <div class="col mb-4 mt-5">
        <div class="card h-100">
          <div class="card-body bg-white rounded cmtBox">
            {{!-- <h3>{{member-name}}</h3> --}}
            <p class="card-title"><span style="font-size:x-large">{{ title }}</span></p>
            <p>{{formatDate createdAt}}</p>
            <a href="/quote/{{id}}">View Post</a>
          </div>
        </div>
      </div>
      {{/each }}
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="js/members.js"></script>